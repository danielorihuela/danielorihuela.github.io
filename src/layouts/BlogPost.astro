---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

import "../styles/neon-code.scss";

type Props = CollectionEntry<"blog">["data"];

const { title, description, publishdate, cover } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} image={cover.src} />
		<style is:global>
			img {
				margin: 0 auto;
			}

			div + h1 {
				margin-top: 0;
			}

			h1,
			h2,
			h3,
			h4,
			h5,
			h6 {
				margin-top: 1em;
			}
		</style>
	</head>

	<body>
		<Header />
		<main class="w-full bg-[#222222]">
			<article>
				<div class="w-96 max-w-full m-auto">
					<Image class="rounded-xl shadow-ba" src={cover} alt="" />
				</div>
				<div class="w-[80ch] max-w-full m-auto text-[#d3d3d3]">
					<div class="py-4 text-center leading-none">
						<div class="mb-2 text-[#ffffff]">
							<FormattedDate date={publishdate} />
						</div>
						<h1 class="text-[#ffffff] font-[Iceland]">{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
